<%- include('header') %>

<main class="container">

  <h1 class="text-left  font-weight-bold bg-dark py-1 px-3 mt-3 mb-1 w-25 rounded-pill"><%= package.packageNum %></h1>
  <div class="row row-cols-1 row-cols-sm-2 row-cols-md-4">
    <p class="lead col">Value: $<%= package.value%></p>
    <p class="lead col">Weight: <%= package.weight%> Kg</p>
    <p class="lead col">Category: <%= package.category%></p>
  </div>
  <p class="lead">Insurance Amount: $<%= package.insurance%></p>
  <h4>Dimensions</h4>
  <div class="row row-cols-1 row-cols-sm-2 row-cols-md-4">
    <p class="lead col">Width: <%= package.width%> cm</p>
    <p class="lead col">Height: <%= package.height%> cm</p>
    <p class="lead col">Length: <%= package.length%> cm</p>
  </div>
  <p class="lead">Barcode: <%= package.barcode%></p>
  <hr>

  <h2 class="mb-2">The traceback of the package: </h2>
  
  <table class="table table-striped table-dark">
    <thead>
      <tr>
        <th scope="col">Date</th>
        <th scope="col">Location</th>
        <th scope="col">status</th>
      </tr>
    </thead>
    <tbody>
        <% package.tracers.forEach( tracer => { %>
          <tr>
            <th scope="row"><%= tracer.date%></th>
            <td><%= tracer.location %></td>
            <td><%= tracer.status %></td>
          </tr>
        <% }) %>

    </tbody>
  </table>
</main>

<style>
  main{
    color: white;
  }
</style>

<%- include('../footer.ejs') %>

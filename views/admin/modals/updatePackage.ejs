<div class="modal fade" id="updatePackage" data-backdrop="static" data-keyboard="false" tabindex="-1" aria-labelledby="updatePackageLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="updatePackageLabel">Update Package</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <form action="/admin/packages/<%= package.PackageNum %>/update" method="post">
        <div class="modal-body">

          <div class="form-group">
            <label for="value">Value</label>
            <input required name="value" type="number" min="0" max="100000" value="<%= package.pValue%>" class="form-control" id="value">
          </div>

          <div class="form-group">
            <label for="category">Category</label>
            <select required class="form-control" name="category" id="category">
              <option>-- Select --</option>
              <option <% if (package.Category === "Fragile") { %> selected <% } %> value="Fragile">Fragile</option>
              <option <% if (package.Category === "Regular") { %> selected <% } %> value="Regular">Regular</option>
              <option <% if (package.Category === "Liquid") { %> selected <% } %> value="Liquid">Liquid</option>
              <option <% if (package.Category === "Chemical") { %> selected <% } %> value="Chemical">Chemical</option>
            </select> 
          </div>
          
          <div class="form-group">
            <label for="finalDate">Final Delivery Date</label>
            <input required type="date" value="<%= package.FinalDeliveryDate%>" class="form-control" id="finalDate" name="finalDate">
          </div>

          <div class="form-row">
            <div class="form-group col-md-4">
              <label for="width">Width</label>
              <input required value="<%= package.Width %>" type="number" min="0" class="form-control" id="width" name="width">
            </div>
            <div class="form-group col-md-4">
              <label for="height">Height</label>
              <input required value="<%= package.Height %>" type="number" min="0" class="form-control" id="height" name="height">
            </div>
            <div class="form-group col-md-4">
              <label for="length">Length</label>
              <input required value="<%= package.Length %>" type="number" min="0" class="form-control" id="length" name="length">
            </div>

          </div>

          <div class="form-group">
            <label for="weight">Weight</label>
            <input required value="<%= package.Weight %>" type="number" min="0" class="form-control" id="weight" name="weight">
          </div>

          <div class="form-group">
            <label for="retail">Retail Center ID</label>
            <input required type="text" value="<%= package.RtlCenter_ID%>" class="form-control" id="retail" name="retail">
          </div>

        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          <button type="submit" class="btn btn-primary">Update</button>
        </div>
      </form>
    </div>
  </div>
</div>
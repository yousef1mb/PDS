<div class="modal fade" id="addPackage" data-backdrop="static" data-keyboard="false" tabindex="-1" aria-labelledby="addPackageLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="addPackageLabel">Add Package</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <form action="/admin/packages/create" method="post">
        <div class="modal-body">

          <div class="form-group">
            <label for="value">Value</label>
            <input type="number" min="0" max="100000" class="form-control" name="value" id="value">
          </div>

          <div class="form-group">
            <label for="category">Category</label>
            <select class="form-control" name="category" id="category">
              <option value="fragile">Fragile</option>
              <option value="regular">Regular</option>
              <option value="liquid">Liquid</option>
              <option value="chemical">Chemical</option>
            </select> 
          </div>
          
          <div class="form-group">
            <label for="finalDate">Final Delivery Date</label>
            <input type="date" class="form-control" id="finalDate" name="finalDate">
          </div>

          <div class="form-row">
            <div class="form-group col-md-4">
              <label for="width">Width</label>
              <input type="number" min="0" class="form-control" id="width" name="width">
            </div>
            <div class="form-group col-md-4">
              <label for="height">Height</label>
              <input type="number" min="0" class="form-control" id="height" name="height">
            </div>
            <div class="form-group col-md-4">
              <label for="length">Length</label>
              <input type="number" min="0" class="form-control" id="length" name="length">
            </div>

          </div>

          <div class="form-group">
            <label for="retail">Retail Center ID</label>
            <input type="text" class="form-control" id="retail" name="retail">
          </div>

        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          <button type="submit" class="btn btn-primary">Add</button>
        </div>
      </form>
    </div>
  </div>
</div>
<%- include('../header') %>

<main class="container">
  <a class="btn btn-info mb-3" href="/admin/reports" role="button">Back</a>
  <table class="table table-striped table-dark">
    <thead>
      <tr>
        <th scope="col">Package Number</th>
        <th scope="col">Status</th>
        <th scope="col">Category</th>
        <th scope="col">Insurance amount</th>
        <th scope="col">Weight</th>
        <th scope="col">Dimensions</th>
        <th scope="col">Value</th>
      </tr>
    </thead>
    <tbody>

      <% if (packages.length) { %>
        <% packages.forEach( package => { %>
          <tr>
            <th scope="row"><a href="/admin/packages/<%= package.PackageNum%>"><%= package.PackageNum%></a></th>
            <td><%= package.status %></td>
            <td><%= package.Category %></td>
            <td><%= package.Insurance_amount %></td>
            <td><%= package.Weight%></td>
            <td>L: <%= package.Length %> H: <%= package.Height %> W: <%= package.Width %></td>
            <td><%= package.pValue %></td>
          </tr>
        <% }) } else { %>
        <tr>
          <td colspan="8">This customer has no packages ... </td>
        </tr>
      <% } %>

    </tbody>
  </table>
</main>


<%- include('../../footer.ejs') %>
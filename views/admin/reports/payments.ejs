
<%- include('../header') %>
<main class="container">
  <a class="btn btn-info mb-3" href="/admin/reports" role="button">Back</a>
  <table class="table table-striped table-dark">
    <thead>
      <tr>
        <th scope="col">Customer</th>
        <th scope="col">Package</th>
        <th scope="col">Amount</th>
        <th scope="col">Status</th>
      </tr>
    </thead>
    <tbody>

      <% if (payments.length) { %>
        <% payments.forEach( payment => { %>
          <tr>
            <th scope="row"><a href="/admin/users/<%= payment.Usr_SSN%>"><%= payment.Usr_SSN%></a></th>
            <th scope="row"><a href="/admin/packages/<%= payment.PackageNum%>"><%= payment.PackageNum%></a></th>
            <td><%= payment.Amount %></td>
            <td>Confirmed</td>
            
          </tr>
        <% }) } else { %>
        <tr>
          <td colspan="8">There is no payments ... </td>
        </tr>
      <% } %>

    </tbody>
  </table>
</main>


<%- include('../../footer.ejs') %>
<%- include('header') %>

<main class="container">
  <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#addPackage">
    Add Package
  </button>
  <table class="table table-striped table-dark">
    <thead>
      <tr>
        <th scope="col">Package Number</th>
        <th scope="col">Status</th>
        <th scope="col">Category</th>
        <th scope="col">Insurance amount</th>
        <th scope="col">Actions</th>
      </tr>
    </thead>
    <tbody>

      <% if (packages.length) { %>
        <% packages.forEach( package => { %>
          <tr>
            <th scope="row"><a href="/admin/packages/<%= package.packageNum%>"><%= package.packageNum%></a></th>
            <td><%= package.status %></td>
            <td><%= package.category %></td>
            <td><%= package.insurance %></td>
            <td><%= package.value %></td>
            <td>
              <form action="/admin/packages/<%= package.packageNum %>/delete" method="post">
                <button type="submit" class="btn btn-danger">
                  Delete
                </button></td>
              </form>
          </tr>
        <% }) } else { %>
        <tr>
          <td colspan="8">No packages yet ... </td>
        </tr>
      <% } %>

    </tbody>
  </table>
</main>

<%- include('modals/createPackage') %>


